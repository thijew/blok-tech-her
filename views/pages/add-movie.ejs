<!doctype html>
<html lang="en">

    <%- include('../components/head'); %>

	<body>
        
        <%- include('../components/header-nav'); %>
			<main>
                <form class="addForm" action="/add-movie"  method="post">
                    <label for="title">Title</label>
                    <input type="text" id="title" required name="title">

                    <label for="director">Director</label>
                    <input type="text" id="director" name="director">

                    <label for="genre">Genre</label>
                    <input type="text" id="genre" name="genre">

                    <label for="imdb">imdb rating</label>
                    <input type="number" id="imdb" min="0" max="10" name="rating">

                    <button class="form-add-btn" type="submit" value="upload">Submit</button>
                    <p class="updateText">Your movie has been added to the database!</p>
                </form>

			</main>
			<%- include('../components/footer'); %>
            <script src="/static/scripts/form-add-btn.js"></script>
	</body>

</html>